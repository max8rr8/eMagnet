{
  "name": "eMagnet",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:maximmasterr/eMagnet.git",
  "author": "max <mrom06@ya.ru>",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.2.4",
    "@babel/cli": "^7.12.1",
    "@babel/plugin-syntax-top-level-await": "^7.12.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "apollo-server-micro": "^2.18.2",
    "graphql": "15",
    "graphql-config": "^3.0.3",
    "graphql-relay": "^0.6.0",
    "join-monster": "^3.0.0-alpha.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.6",
    "next": "^9.5.5",
    "pg": "^8.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "prettier": "^2.1.2",
    "webpack": "^5.1.0",
    "webpack-cli": "3.3.12",
    "webpack-merge": "^5.2.0",
    "xo": "^0.33.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "chrome": "80"
          }
        }
      ],
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-syntax-top-level-await"
    ]
  },
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier src --write",
    "lint": "xo src",
    "docs": "docsify serve ./docs"
  },
  "xo": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "xo-react"
    ],
    "space": true,
    "semi": false,
    "prettier": true,
    "env": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ],
      "react/function-component-definition": [
        "error",
        {
          "namedComponents": "function-declaration"
        }
      ],
      "no-alert": 0,
      "react/prop-types": 0,
      "max-lines": [
        2,
        196
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "ObjectID"
          ]
        }
      ]
    },
    "settings": {
      "import/core-modules": [
        "crypto",
        "path"
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  }
}
